<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shade.fcitrainingcenter.CourseView"
    tools:showIn="@layout/activity_course_view">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/courseimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/javacourse" />

            <TextView
                android:id="@+id/coursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/courseprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Price"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numofsessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Num Of Sessions"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/coursecertified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Certified"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/courselevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Level"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/coursestart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="Start"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/courseend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="15dp"
                android:text="End"
                android:textSize="18sp" />

            <Button
                android:id="@+id/enrollButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:onClick="enroll"
                android:padding="5dp"
                android:text="Enroll"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>